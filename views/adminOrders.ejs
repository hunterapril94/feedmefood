<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script type="text/javascript" src="/scripts/jquery_helpers.js"></script>
  <link rel='shortcut icon' type='image/jpeg' href='/favicon.ico' />
  <title>Sweet Leaf</title>
</head>
<body>
  <%- include('./partials/_header') %>
  <!-- use js to change the text of login to logout on this page -->
  <h2>Orders</h2>
  <div class="container">
    <div class="container">
      <h3>Current Orders</h3>
      <% for(i=0; i < currentOrders.length; i++)  { %>
      <div class="container">
        <h4>Order#: <%= currentOrders[i].id %></h4>
        <% for(j=0; j < currentOrders[i].items.length; j++) { %> <!--gives an error-->
          <h4><%= currentOrders[i].items[j].name %></h4>
          <h4><%= currentOrders[i].items[j].price %></h4>
          <h4><%= currentOrders[i].items[j].quantity%></h4>
        <% } %>
        <form action="/<%= currentOrders[i].id %>/complete" method="post"> <!--check the order id please-->
          <button type="submit">Complete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>

  <div class="container">
      <h3>Incoming Orders</h3>
      <% for(i=0; i < incomingOrders.length; i++)  { %>
      <div class="container">
        <h4>Order#: <%= incomingOrders[i].id %></h4>
        <% for(j=0; j < incomingOrders[i].items.length; j++) { %> <!--gives an error-->
          <h4><%= incomingOrders[i].items[j].name %></h4>
          <h4><%= incomingOrders[i].items[j].price %></h4>
          <h4><%= incomingOrders[i].items[j].quantity%></h4>
        <% } %>
        <form action="/<%= incomingOrders[i].id %>/accept" method="post"> <!--check the order id please-->
          <label>Set Estimated Completion</label>
          <input type="text">
          <button type="submit">Accept</button>
        </form>
      </div>
      <% } %>
  </div>
        <!-- save orders with accepted timestamp, but no on completed as currentorders under each current order add a key items
      with an array of all items in that order -->
            <!-- save orders with no accepted timestamp and completed false as incomingOrders -->
  <%- include('./partials/_footer') %>
</body>
</html>
