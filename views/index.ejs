<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <script src="../public/scripts/app.js"></script>
  <script src="../public/vendor/jquery-3.0.0.js"></script>
  <link href="../public/vendor/border-box.css" />
  <link href="../public/vendor/normalize-4.1.1.css" />
  <link rel='shortcut icon' type='image/jpeg' href='../docs/favicon.ico' />
  <title>Sweet Leaf</title>
</head>
<body>
  <%- include('./partials/_header') %>
  <div>
    <h2>Bowls</h2>
    <% for (i=0; i < bowls.length; i++) { %> 
      <div class="menu_item">
        <img src= "<%= bowls[i].image%>" />
        <h3 class="menu_item"><%= bowls[i].name %></h3>
        <a href="partials/_item.ejs">See details</a>
      </div>  
    <% } %>
    <!-- save items from database as const bowls, const salads etc in order for this to work -->
  </div>
  <div>
    <h2>Salads</h2>
    <% for (i=0; i < salads.length; i++) { %> 
      <div class="menu_item">
        <img src= "<%= salads[i].image%>" />
        <h3 class="menu_item"><%= salads[i].name %></h3>
        <a href="partials/_item.ejs">See details</a>
      </div>  
    <% } %>
  </div>
  <div>
    <h2>Drinks</h2>
    <% for (i=0; i < drinks.length; i++) { %> 
      <div class="menu_item">
        <img src= "../docs/menu/0<%= i+1 %>.jpeg" >
        <h3 class="menu_item"><%= drinks[i].name %></h3>
        <a href="partials/_item.ejs">See details</a>
      </div>  
    <% } %>
  </div>
  <%- include('partials/_footer') %>
</body>
</html>